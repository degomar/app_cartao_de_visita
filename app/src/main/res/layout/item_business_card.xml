<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="21:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_empresa"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_business"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ResourceCycle"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_nome_empresa"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:hint="Empresa"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ic_empresa"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Empresa XYZ CONsultoria"></com.google.android.material.textview.MaterialTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_pessoa"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_faces"
                app:layout_constraintBottom_toTopOf="@+id/ic_celular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_empresa"
                tools:ignore="ResourceCycle"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:hint="Nome Empresa"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_telefone"
                app:layout_constraintStart_toEndOf="@+id/ic_pessoa"
                app:layout_constraintTop_toBottomOf="@+id/tv_nome_empresa"
                tools:text="Fulano de tal"></com.google.android.material.textview.MaterialTextView>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_celular"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_smartphone"
                app:flow_horizontalAlign="center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_telefone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_telefone"
                tools:ignore="ResourceCycle"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_telefone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:hint="Telefone"
                app:layout_constraintStart_toEndOf="@+id/ic_celular"
                app:layout_constraintTop_toBottomOf="@+id/tv_nome"
                tools:text="(00) 0000-0000">

            </com.google.android.material.textview.MaterialTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_mail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mail"
                app:flow_horizontalAlign="center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_email"
                tools:ignore="ResourceCycle">
            </androidx.appcompat.widget.AppCompatImageView>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:hint="E-mail"
                app:layout_constraintStart_toEndOf="@id/ic_mail"
                app:layout_constraintTop_toBottomOf="@+id/tv_telefone"
                tools:text="email@emailTeste.com.br"></com.google.android.material.textview.MaterialTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>